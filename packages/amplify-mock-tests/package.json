{
  "name": "amplify-mock-tests",
  "version": "6.3.4",
  "description": "Amplify CLI plugin providing local testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-category-api.git",
    "directory": "packages/amplify-mock-tests"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "keywords": [
    "graphql",
    "appsync",
    "aws"
  ],
  "private": "true",
  "scripts": {
    "e2e": "yarn run e2e_v1 && yarn run e2e_v2",
    "e2e_v2": "jest --runInBand --forceExit ./src/__e2e_v2__/*.test.ts",
    "e2e_v1": "jest --runInBand --forceExit ./src/__e2e__/*.test.ts",
    "clean": "rimraf lib tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@aws-amplify/amplify-appsync-simulator": "^2.15.1",
    "@aws-amplify/amplify-util-mock": "^5.8.0",
    "@aws-amplify/graphql-transformer": "1.2.4",
    "@aws-amplify/graphql-transformer-interfaces": "3.2.1",
    "@aws-amplify/graphql-transformer-test-utils": "0.2.6",
    "@types/node": "^12.12.6",
    "amplify-dynamodb-simulator": "^2.9.5",
    "amplify-nodejs-function-runtime-provider": "^2.5.10",
    "aws-appsync": "^4.1.9",
    "aws-sdk": "^2.1113.0",
    "axios": "^0.26.0",
    "fs-extra": "^8.1.0",
    "graphql-auth-transformer": "7.2.66",
    "graphql-connection-transformer": "5.2.65",
    "graphql-dynamodb-transformer": "7.2.65",
    "graphql-function-transformer": "3.3.56",
    "graphql-key-transformer": "3.2.65",
    "graphql-tag": "^2.10.1",
    "graphql-transformer-core": "8.1.12",
    "graphql-versioned-transformer": "5.2.65",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^8.3.2"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**",
      "!src/__tests__/**",
      "!lib/**"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost/",
    "testRegex": "(src/(__tests__|__e2e__|__e2e_v2__)/.*.test.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/junit/",
    "outputName": "js-test-results.xml",
    "usePathForSuiteName": "true",
    "addFileAttribute": "true"
  }
}
