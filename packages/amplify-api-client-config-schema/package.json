{
  "name": "@aws-amplify/api-client-config-schema",
  "version": "0.0.1",
  "description": "Client config schema for AppSync API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-category-api.git",
    "directory": "packages/amplify-api-client-config-schema"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf lib tsconfig.tsbuildinfo node_modules",
    "test": "jest",
    "test-watch": "jest --watch",
    "extract-api": "ts-node ../../scripts/extract-api.ts"
  },
  "keywords": [
    "amplify",
    "api",
    "appsync"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^12.12.6",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.4.4",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "zod": "^3.21.4"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
