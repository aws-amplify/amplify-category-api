{
  "name": "amplify-category-api-graphql-transformers-e2e-tests",
  "version": "9.0.5",
  "description": "End to end functional tests for appsync supported transformers.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-category-api.git",
    "directory": "packages/graphql-transformers-e2e-tests"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "graphql",
    "appsync",
    "aws"
  ],
  "scripts": {
    "e2e": "jest",
    "build-tests": "yarn tsc --build tsconfig.tests.json"
  },
  "dependencies": {
    "@aws-amplify/graphql-auth-transformer": "4.1.4",
    "@aws-amplify/graphql-relational-transformer": "3.0.6",
    "axios": "^1.6.0",
    "cloudform-types": "^4.2.0",
    "graphql": "^15.5.0",
    "graphql-transformer-common": "5.0.1",
    "graphql-transformer-core": "9.0.1",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@aws-amplify/amplify-appsync-simulator": "2.16.4",
    "@aws-amplify/core": "^2.1.0",
    "@aws-amplify/graphql-default-value-transformer": "3.1.1",
    "@aws-amplify/graphql-index-transformer": "3.0.6",
    "@aws-amplify/graphql-maps-to-transformer": "4.0.6",
    "@aws-amplify/graphql-model-transformer": "3.0.6",
    "@aws-amplify/graphql-transformer-core": "3.2.1",
    "@aws-amplify/graphql-transformer-interfaces": "4.1.2",
    "@aws-amplify/graphql-transformer-test-utils": "1.0.5",
    "@types/node": "^18.0.0",
    "aws-amplify": "^4.2.8",
    "aws-appsync": "^4.1.1",
    "aws-sdk": "^2.1113.0",
    "execa": "^5.1.1",
    "fs-extra": "^8.1.0",
    "graphql-tag": "^2.10.1",
    "isomorphic-fetch": "^3.0.0",
    "jest-junit": "^12.0.0",
    "node-fetch": "^2.6.7",
    "ws": "^7.5.7"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.tests.json"
        }
      ]
    },
    "collectCoverage": true,
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "clover",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit",
      [
        "amplify-category-api-e2e-core/failed-test-reporter",
        {
          "publicPath": "./amplify-e2e-reports",
          "reportPath": "./amplify-e2e-reports/amplify-e2e-failed-test.txt"
        }
      ]
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "testRegex": "(src/__tests__/.*.test.*)$",
    "testPathIgnorePatterns": [
      "/lib/",
      "/resources/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "window": {}
    },
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "/__tests__/"
    ],
    "snapshotFormat": {
      "escapeString": true,
      "printBasicPrototype": true
    }
  },
  "jest-junit": {
    "outputDirectory": "reports/junit/",
    "outputName": "js-test-results.xml",
    "usePathForSuiteName": "true",
    "addFileAttribute": "true"
  }
}
