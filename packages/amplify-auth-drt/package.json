{
  "name": "amplify-auth-drt",
  "version": "0.1.0",
  "description": "Differential random testing suite for Amplify auth",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-category-api.git",
    "directory": "packages/amplify-auth-drt"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "index.js",
  "keywords": [
    "graphql",
    "appsync",
    "aws"
  ],
  "private": true,
  "scripts": {
    "build": "tsc",
    "build-tests": "yarn build && tsc --build tsconfig.tests.json",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "@aws-amplify/graphql-api-construct": "1.17.0",
    "@aws-amplify/graphql-transformer-core": "3.3.0",
    "@aws-cdk/aws-cognito-identitypool-alpha": "2.152.0-alpha.0",
    "@aws-sdk/client-appsync": "3.624.0",
    "fast-check": "^3.23.1",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "aws-cdk-lib": "2.158.0",
    "constructs": "10.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^8.10.1"
  },
  "jest": {
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/__tests__/.*.test.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 88,
        "functions": 90,
        "lines": 90
      }
    },
    "coverageReporters": [
      "clover",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/"
    ],
    "snapshotFormat": {
      "escapeString": true,
      "printBasicPrototype": true
    }
  },
  "jest-junit": {
    "outputDirectory": "reports/junit/",
    "outputName": "js-test-results.xml",
    "usePathForSuiteName": "true",
    "addFileAttribute": "true"
  }
}
